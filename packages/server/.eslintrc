{
  "extends": ["airbnb-base", "plugin:jest/style", "plugin:prettier/recommended"],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "env": {
        "node": true,
        "es6": true
      },
      "extends": [
        "airbnb-base",
        "plugin:jest/style",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-console": "off",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never",
            "js": "never",
            "jsx": "never"
          }
        ]
      }
    }
  ]
}
