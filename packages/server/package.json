{
  "name": "@shri-ci/server",
  "private": true,
  "scripts": {
    "start": "node -r dotenv/config src/app.js dotenv_config_path=../../.env",
    "start:e2e": "node -r dotenv/config src/app.js dotenv_config_path=../../.env.test",
    "dev": "cross-env PORT=5000 NODE_ENV=development nodemon -r dotenv/config --inspect src/app.js dotenv_config_path=../../.env.test",
    "test": "jest",
    "lint": "eslint src/ --fix"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "lru-cache": "^5.1.1",
    "object-sizeof": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-jest": "^25.3.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.2"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
