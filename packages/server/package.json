{
  "name": "@shri-ci/server",
  "private": true,
  "scripts": {
    "start": "npm run build && node -r dotenv/config build/app.js dotenv_config_path=../../.env",
    "build": "tsc",
    "start:e2e": "npm run build && node -r dotenv/config build/app.js dotenv_config_path=../../.env.test",
    "dev": "cross-env PORT=5000 NODE_ENV=development nodemon -e js,ts,json -r dotenv/config src/app.ts dotenv_config_path=../../.env.test",
    "test": "jest",
    "lint": "eslint src/ tests/ --fix --ext .ts"
  },
  "dependencies": {
    "@shri-ci/types": "^0.1.0",
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "lru-cache": "^5.1.1",
    "object-sizeof": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/lru-cache": "^5.1.0",
    "babel-jest": "^25.3.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.9.0"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts}": [
      "eslint --fix --ext .ts"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
