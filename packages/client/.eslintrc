{
  "extends": ["airbnb-base", "react-app", "plugin:jest/style", "plugin:prettier/recommended"],
  "overrides": [
    {
      "files": ["*.{ts,tsx}"],
      "extends": [
        "airbnb-base",
        "react-app",
        "plugin:jest/style",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never",
            "tsx": "never",
            "js": "never",
            "jsx": "never"
          }
        ]
      }
    }
  ]
}
